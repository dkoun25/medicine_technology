# Environment Configuration
# Copy this file to .env and update values for your environment

# ===== APP INFO =====
EXPO_PUBLIC_APP_NAME=Medicine Technology
EXPO_PUBLIC_APP_VERSION=1.0.0

# ===== API =====
# Local development
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Production (update when deploying)
# EXPO_PUBLIC_API_URL=https://api.yourdomain.com/api

# ===== FEATURES =====
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=false
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=false

# ===== FIREBASE (optional) =====
# EXPO_PUBLIC_FIREBASE_API_KEY=your_key
# EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_domain
# EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project
# EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_bucket

# ===== THIRD-PARTY SERVICES =====
# SENTRY_DSN=your_sentry_url (error tracking)
# MIXPANEL_TOKEN=your_token (analytics)

# ===== DATABASE (if self-hosted) =====
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=medicine_db
# DB_USER=postgres
# DB_PASSWORD=password

# ===== JWT SECRET (backend only) =====
# JWT_SECRET=your_secret_key_here
# JWT_EXPIRE=7d

# ===== MAIL (for notifications) =====
# MAIL_SERVICE=gmail
# MAIL_FROM=noreply@example.com
# MAIL_PASSWORD=your_app_password

# ===== AWS/CLOUD STORAGE (if needed) =====
# AWS_REGION=ap-southeast-1
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# AWS_S3_BUCKET=your_bucket

# ===== DEBUG MODE =====
# Set to true for verbose logging
DEBUG=false
LOG_LEVEL=info # debug, info, warn, error

# ===== TIMEZONE =====
TIMEZONE=Asia/Ho_Chi_Minh

# ===== CURRENCY =====
CURRENCY=VND
